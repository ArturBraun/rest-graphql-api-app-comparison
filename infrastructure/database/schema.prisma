datasource db {
  provider = "sqlite"
  url      = "file:./database.db"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  userId      Int    @id @default(autoincrement())
  email       String @unique
  firstName   String
  lastName    String
  dateOfBirth String
  address     String
  gender      String
}

model Product {
  productId   Int      @id @default(autoincrement())
  name        String   @unique
  description String
  price       Float
  category    Category @relation(fields: [categoryId], references: [categoryId])
  categoryId  Int
}

model Category {
  categoryId Int       @id @default(autoincrement())
  name       String    @unique
  products   Product[]
}
